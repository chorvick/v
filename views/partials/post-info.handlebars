<article class="card">
  <div class="card-header">
    <a href="/post/{{id}}"class="btn btn-primary mx-auto">{{title}}</a>

    <div class="meta">
      Posted by {{user.username}} on {{format_date created_at}}
    </div>
  </div>
  <div class="card-body">
    {{content}}
  </div>
  <div class="card-header">
    <a class="link" href="/post/{{id}}"> {{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>